{
  "name": "pigeon-server",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "server": "node ./dist/app.js",
    "transpile": "babel ./src --out-dir dist --copy-files",
    "clean": "rimraf dist",
    "build": "npm-run-all clean transpile",
    "dev": "NODE_ENV=development npm-run-all build server",
    "prod": "NODE_ENV=production npm-run-all build server",
    "start": "npm run prod",
    "watch:dev": "nodemon"
  },
  "dependencies": {
    "@babel/preset-env": "^7.12.1",
    "debug": "~2.6.9",
    "express": "~4.16.1",
    "firebase-admin": "^9.3.0",
    "http-errors": "~1.6.3",
    "nodemon": "^2.0.6",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2"
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  },
  "nodemonConfig": {
    "exec": "npm run dev",
    "watch": [
      "src/*"
    ],
    "ignore": [
      "**/__tests__/**",
      "*.test.js",
      "*.spec.js"
    ]
  },
  "devDependencies": {
    "@babel/cli": "^7.12.1",
    "@babel/core": "^7.12.3"
  }
}
